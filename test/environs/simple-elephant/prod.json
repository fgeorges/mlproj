{
    "mlproj": {
        "format": "0.1",
        "code": "simple-elephant",
        "title": "Simple example with attribute and path range indexes",
        "connect": {
            "host": "ml9ea4",
            "user": "admin",
            "password": "admin"
        },
        "databases": [{
            "name": "@{code}-content",
            "indexes": {
                "ranges": [{
                    "type":      "string",
                    "name":      "attr",
                    "positions": false,
                    "invalid":   "ignore",
                    "parent": {
                        "name": "elem"
                    }
                }, {
                    "type":      "dateTime",
                    "name":      "elem",
                    "positions": false,
                    "invalid":   "ignore"
                }, {
                    "type":      "dateTime",
                    "name":      [ "date", "time" ],
                    "positions": false,
                    "invalid":   "ignore",
                    "parent": {
                        "name": "elem",
                        "namespace": "http://example.org/"
                    }
                }, {
                    "type":      "string",
                    "name":      [ "bear", "cat" ],
                    "positions": false,
                    "invalid":   "ignore",
                    "parent": {
                        "name": "elem",
                        "namespace": "http://example.org/"
                    }
                }, {
                    "type":      "int",
                    "path":      "foo/bar",
                    "positions": false,
                    "invalid":   "ignore"
                }]
            }
        }]
    }
}
