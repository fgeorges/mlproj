{
    "mlproj": {
        "format": "0.1",
        "code": "simple-ape",
        "title": "Simple base space example",
        "srcdir" : "/tmp/src/",
        "params": {
            "port": "7010"
        },
        "apis": {
            "management": {
                "root": "manage/v2",
                "port": 8002,
                "ssl": false
            },
            "client": {
                "root": "v1",
                "port": 8000,
                "ssl": false
            },
            "xdbc": {
                "port": 8000,
                "ssl": false
            }
        },
        "servers": [{
            "id": "server",
            "name": "@{code}",
            "type": "http",
            "port": "${port}",
            "content": {
                "name": "@{code}-content"
            },
            "modules": {
                "name": "@{code}-modules"
            },
            "root": "/"
        }]
    }
}
