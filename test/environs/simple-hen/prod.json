{
    "mlproj": {
        "format": "0.1",
        "code": "simple-hen",
        "title": "Example with fast searches, and server output properties",
        "srcdir": "/tmp/does/not/exist",
        "connect": {
            "host": "ml9ea4",
            "user": "admin",
            "password": "admin"
        },
        "params": {
            "port": "7080"
        },
        "databases": [{
            "id": "content",
            "name": "@{code}-content",
            "searches": {
                "fast": {
                    "case-sensitive"            : true,
                    "diacritic-sensitive"       : false,
                    "element-character"         : false,
                    "element-phrase"            : true,
                    "element-trailing-wildcard" : true,
                    "element-word"              : false,
                    "phrase"                    : false,
                    "reverse"                   : true
                }}
        }],
        "servers": [{
            "name": "@{code}",
            "type": "http",
            "port": "${port}",
            "root": "/",
            "content": {
                "nameref": "@{code}-content"
            },
            "modules": {
                "name": "@{code}-modules"
            },
            "output": {
                "byte-order-mark"             : "no",
                "cdata-section-localname"     : "code-snippet",
                "cdata-section-namespace-uri" : "http://example.org/ns"
            }
        }]
    }
}
